{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "app/*": [ "src/*" ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "files": true
  }
}